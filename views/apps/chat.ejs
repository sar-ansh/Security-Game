<style>       
    .chat_box{
        position: absolute;
        right: 0px;
        bottom:0px;
        width:250px;
    }
    
    .chat_body{
        background:white;
        height: 500px;
        padding:5px 0px;
        overflow-y: auto;
    }
    
    .chat_head,.msg_head{
        background:#f39c12;
        color:white;
        padding:15px;
        font-weight:bold;
        cursor:pointer;
    }
    
    .chat_head{
        border-radius:30px 0px 0px 0px;
    }
    
    .msg_head{
        border-radius:5px 5px 0px 0px;
    }
    
    .msg_box{
        position:absolute;
        bottom:50px;
        width:300px;
        background:white;
        border-radius:5px 5px 0px 0px;
    }
    
    .msg_head{
        background:#3498db;
    }
    
    .msg_body{
        background:white;
        height:300px;
        font-size:12px;
        padding:15px;
        overflow-y:auto;
        word-wrap: break-word;
    }
    
    .inputbot{
        position:absolute;
        bottom:0px;
        height: 50px;
        width:300px;
        right: 290px;
        background:white;
        padding-left: 30px;
        padding-right: 30px;
    }
    
    .close{
        float:right;
        cursor:pointer;
    }
    
    .user{
        position:relative;
        padding:10px 30px;
    }
    
    .user:hover{
        background:#f8f8f8;
        cursor:pointer;

    }
    
    .user:before{
        content:'';
        position:absolute;
        background:#2ecc71;
        height:10px;
        width:10px;
        left:10px;
        top:15px;
        border-radius:6px;
    }
    
    .you {
        color: red;
    }

    .robot {
        color: blue;
    }
</style>

<div class="start_navbar">
    <div class="pull-left">
        <a class="win-command pull-right comp_nav">
            <span class="win-commandicon win-commandring icon-list-2"></span>
        </a>
        <br>
        <a class="win-command pull-left goto_start">
            <span class="win-commandicon win-commandring icon-arrow-left-12"></span>
        </a>
    </div>
    <div class="pull-right start_name">
        <h2>ChatBox <i class="fa fa-comments section_hint" hint_message="Come once, come again! This app is your personal chatbox as the name suggests."></i></h2>
    </div>
</div>

<div class="chat">
    <div id="chatbox" style="position: absolute; top: 120px; left: 50px; right: 0px; bottom: 0px; border:0px solid #ffffff;">		        
        <div class="chat_box">
            <div class="chat_head"> Chat Box</div>
            <div class="chat_body">
                <div id="gred" class="user">Gred</div>
                <div id="forge" class="user">Forge</div>
            </div>
        </div>
        <div class="msg_box" style="right:290px">
            <div class="msg_head">Gred
                <div class="close">x</div>
            </div>
            <div class="msg_wrap">
                <div class="msg_body">
                    <div class="chatbot"></div>
                    <div class="busybot" style="display: none;"></div>
                </div>
            </div>
        </div>
        <div class="inputbot">
            <input style="height:50px" type="text" placeholder="Chat with me!" />
            <a><i style="position: absolute; right: 20px; top: 15px;" class="fa fa-paper-plane"></i></a>
        </div>
    </div>
</div>

<script type="text/javascript" src="js/apps/chatbot.js"></script>

<script>    
    $('.chat_head').click(function(){
            $('.chat_body').slideToggle('slow');
        });

        $('.msg_head').click(function(){
            $('.msg_wrap').slideToggle('slow');
        });

        $('.close').click(function(){
            $('.msg_box').hide();
        });

        $('.user').click(function(){
            $('.msg_box').show();
        });
</script>