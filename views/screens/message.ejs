<% include layouts_screen/header %>
    
<body>
    <div class="browser-mockup with-url">
        <div style="background-color: #FFFFFF; margin: auto; height: 50px; width: 100; border:1px solid #FFFFFF;">
            <i style="position: absolute; top: 15px; left: 10px;"type="button" class="fa fa-arrow-left" onclick='console.log("Previous")'></i>
            <i style="position: absolute; top: 15px; left: 40px;"type="button" class="fa fa-arrow-right" onclick='console.log("Next")';></i>
        </div>
        <div style="background-color: #FFFFFF; margin: auto; height: 720px; width: 100; border:0px solid #FF0000;">
            <div style="position: absolute; top: 80px; left: 80px; right: 80px; background-color: #FFFFFF; margin: auto; border:1px solid #F3F3F3; padding:20px;">
                <div style="text-align: center;">
                    <h3>Compose Message</h3>
                </div>
                <div>
                    <form role="form" class="form-horizontal">
                        <div class="form-group">
                          <label class="col-sm-2" for="inputTo">To</label>
                          <div class="col-sm-10"><input type="email" class="form-control" id="inputTo" placeholder="comma separated list of recipients"></div>
                        </div>
                        <div class="form-group">
                          <label class="col-sm-2" for="inputSubject">Subject</label>
                          <div class="col-sm-10"><input type="text" class="form-control" id="inputSubject" placeholder="subject"></div>
                        </div>
                        <div class="form-group">
                          <label class="col-sm-12" for="inputBody">Message</label>
                          <div class="col-sm-12"><textarea class="form-control" id="inputBody" rows="18"></textarea></div>
                        </div>
                    </form>
                </div>
                <div class="pull-right">
                    <button type="button" class="btn btn-primary ">Send <i class="fa fa-arrow-circle-right fa-lg"></i></button>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
  